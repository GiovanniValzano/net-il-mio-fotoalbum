@model Photo
@{
    var photo = Model;
}

<div class="personal-card">
    <a href="@Url.Action("Detail",new { Id = photo.Id})"><img src="@photo.ImgSrc" /></a>
    <div class="text-container">
        <h2>@photo.Title</h2>
        <div class="btn-container">
            <a href="#" class="personal-btn personal-btn-secondary">Modifica</a>
            <a class="personal-btn personal-btn-secondary">Elimina</a>
        </div>
    </div>
</div>