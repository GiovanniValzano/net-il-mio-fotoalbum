@model Category[]
@{
    var categories = Model;
}


<div class="content-container">
    @await Html.PartialAsync("_Navbar")
    <div class="category-container">
        <table>
            <tr>
                <th colspan="2">Categorie</th>
            </tr>
            @foreach (Category cat in categories)
            {
                <tr>
                    <td>@cat.Name</td>
                    <td class="table-btn-cont">
                        <a href="@Url.Action("Update", "Category" ,new { Id = cat.Id})" class="personal-btn personal-btn-secondary">Modifica</a>
                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button class="personal-btn personal-btn-secondary">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
        <a href="@Url.Action("Create", "Category")" class="personal-btn personal-btn-secondary">Nuova categoria</a>
    </div>
</div>